<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cafe.ui.controller.LoginController"
      alignment="CENTER" spacing="15" style="-fx-padding: 40;">

    <Label text="☕ Iniciar Sesión" style="-fx-font-size:20px;-fx-font-weight:bold;" />

    <TextField fx:id="txtUsername" promptText="Usuario" />
    <PasswordField fx:id="txtPassword" promptText="Contraseña" />

    <Button text="Ingresar" onAction="#iniciarSesion" style="-fx-padding: 6 20;" />
    <Label fx:id="lblMensaje" textFill="red" />
</VBox>
